<h1>Day Planner</h1>

<ul>
  {{!-- Passed plans from server.js with the array of objects from the SQL query(data) --}}
  {{#each plans}}
  <li>
    <p>
      {{!-- Displaying plan and id to the user along with a custom delete button for each  --}}
      {{this.id}}. {{this.plan}}
{{!-- Populating data-planid below on the fly --}}
      <button data-planid="{{this.id}}" class="delplan">Delete Plan!</button>
    </p>
  </li>
  {{/each}}
</ul>

<h2>Create a Plan</h2>
{{!-- For creating a new plan with a key of "plan" and value from the textarea with the id generated by SQl. Initiates an ajax post via a jquery on.submit event below --}}
<form id="createplan" class="button-size">
  {{!-- [name="plan"] used to gather the data in jquery below --}}
  <textarea type="text" name="plan"></textarea>
  <button type="submit">Save Plan!</button>
</form>

<h2>Update a Plan</h2>
{{!-- For updating an existing plan on the displayed list --}}
<form id="updateplan" class="button-size">
{{!-- Populating the selectable plans to update on the fly like above...[name="id"] used to gather data in the jquery below --}}
  <select name="id">
		{{#each plans}}
			<option value="{{this.id}}">{{this.plan}}</option>
		{{/each}}
	</select>
{{!-- textarea for the to be updated plan value  --}}
  <textarea type="text" name="plan" placeholder="plan"></textarea>
  <button type="submit">Update Plan!</button>
</form>

<script type="text/javascript">
  $(".delplan").on("click", function(event) {
    // Get the ID from the button.
    // This is shorthand for $(this).attr("data-planid")
    var id = $(this).data("planid");

    // Send the DELETE request.
    $.ajax("/todos/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

// on.submit event triggered by the create plan button above 
  $("#createplan").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    // [name=plan] will find an element with a "name" attribute equal to the string "plan"
    //Create object newPlan with key of plan and value from the createplan text area with a name of plan
    var newPlan = {
      plan: $("#createplan [name=plan]").val().trim()
    };

    // Send a POST request with body containing the newPlan object created above.
    $.ajax("/todos", {
      type: "POST",
      data: newPlan
    }).then(
      function() {
        console.log("created new plan");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

// on.submit event triggered by the update plan button above 
  $("#updateplan").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    // Get the ID by finding an element with a "name" attribute equal to the string "id"
    var id = $("[name=id]").val().trim();

    var updatedPlan = {
      plan: $("#updateplan [name=plan]").val().trim()
    };

    // Send the PUT request.
    $.ajax("/todos/" + id, {
      type: "PUT",
      data: updatedPlan
    }).then(
      function() {
        console.log("updated id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>
